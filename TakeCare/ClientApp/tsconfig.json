{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom", "es2015", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false, // Causes errors in a number of bindings if switched on
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    //"strictBindCallApply": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false, // Causes many errors if switched on
    "target": "es2017",
    "skipLibCheck": true // Remove duplicate variable declaration
  },
  "exclude": [],
  "include": ["./src/**/*.ts", "./src/**/**/*.ts", "./src/**/*.vue", "./src/**/**/*.vue"]
}
